D={
    'hello':'namaste',
    'welcome':'svaagat',
    'thank you':'dhanyavaad',
    'please':'kripaya',
    'hope':'aasha',
    'power':'shakti',
    'wish':'ichchha',
    'soul':'aatma',
    'believe':'vishvaas',
    'education':'shiksha'
}

EH=input('Would you like to enter an english (e) word or a hindi (h) word? : ')

if EH=='e':
    word=input('Enter english word: ')
    for key, value in D.items():
        if key==word:
            print(word,':',value)
            break
        else:
            add=input('Would you like to add it in the dictionary? (y/n) : ')
            if add=='y':
                hindi=input('What is the word in hindi? : ')
                D[word] = hindi
            elif add=='n':
                print('Ok, thankyou for using my program!')
            else:
                print('Invalid')

elif EH=='h':
    word=input('Enter hindi word: ')
    for key, value in D.items():
        if value==word:
            print(word,':',key)
            break
        else:
            add=input('Would you like to add it in the dictionary? (y/n) : ')
            if add=='y':
                english=input('What is the word in english? : ')
                D[english] = word
            elif add=='n':
                print('Ok, thankyou for using my program!')
            else:
                print('Invalid')
else:
    print('Invalid')
        
